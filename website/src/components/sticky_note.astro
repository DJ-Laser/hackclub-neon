---

let {q: question, title} = Astro.props
if (!title) title = false

---

<div class="note">
    <h1>{question}</h1>
    <p><slot></slot></p>
</div>

<style>
    .note {
        background-color: rgba(218, 198, 70, 1);
        width: 300px;
        height: 300px;

        overflow: hidden;

        color: black;
        font-family: "Jersey 25", sans-serif;

        padding: 20px;

        filter: drop-shadow(0px 6px 6px rgba(0, 0, 0, 0.25));


    }

    h1 {
        font-size: 3em;
    }

    p {
        font-size: 1.5em;
    }
</style>